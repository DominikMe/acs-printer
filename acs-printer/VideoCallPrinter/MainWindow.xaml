                <DropDownButton Width="200" Margin="10,5,10,10">
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom" x:Name="printerFlyout">
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10,10,10,10">
